server {
    listen 80;
    listen [::]:80;

    server_name *.login.no;
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name login.no www.login.no;
    ssl_certificate /etc/letsencrypt/live/login.no/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/login.no/privkey.pem;

    include snippets/errors.conf;
#   resolver 10.177.195.1 valid=10s ipv6=off;

    location / {
#       access_by_lua_file /etc/nginx/lua/traffic_logger.lua;
        proxy_pass http://localhost:3000;
        include snippets/proxy-headers.conf;
    }
}

server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name *.login.no;

    ssl_certificate /etc/letsencrypt/live/login.no/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/login.no/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    include snippets/errors.conf;
#   resolver 10.177.195.1 valid=10s ipv6=off;

    location / {
#       access_by_lua_file /etc/nginx/lua/traffic_logger.lua;
        proxy_pass $vm_target;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_ssl_verify off;
        proxy_ssl_server_name on;

        error_page 502 = @fallback;
    }

    location @fallback {
        return 301 https://login.no;
    }
}
